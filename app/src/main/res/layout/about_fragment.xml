<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".view.AboutFragment">

    <LinearLayout
        android:id="@+id/aboutClose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/perfil"/>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/about_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Felipe Miranda"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Desenvolvedor Android;\nGraduando Ciência da Computação."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Kotlin"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/kotlin"/>

            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/Java"
                android:layout_margin="10dp"
                android:src="@drawable/java"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/Python"
                android:layout_margin="10dp"
                android:src="@drawable/python"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/SQL"
                android:layout_margin="10dp"
                android:src="@drawable/mysql"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/Android"
                android:layout_margin="10dp"
                android:src="@drawable/largeandroid"
                android:layout_width="25dp"
                android:layout_height="25dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Spring"
                android:layout_margin="10dp"
                android:src="@drawable/spring"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/apache"
                android:layout_margin="10dp"
                android:src="@drawable/apache"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/contacts_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instagram"
                android:layout_margin="10dp"
                android:src="@drawable/insta"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:id="@+id/email"
                android:layout_margin="10dp"
                android:src="@drawable/outlook"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:id="@+id/lin"
                android:layout_margin="10dp"
                android:src="@drawable/linkedin"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <ImageView
                android:id="@+id/git"
                android:layout_margin="10dp"
                android:src="@drawable/git"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>